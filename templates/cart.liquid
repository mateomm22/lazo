<div id="cart" data-barba="container" data-barba-namespace="cart">
   <div class="animated"></div>
    <div class="main-hero hero--cart">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="main-hero-content">
                        <h1 class="title title--big title--white">
                            Carrito de compras
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--white"><path class="js-wave" d="M 0 49.308 C 276.9997 39.8989 276.9997 39.8989 553.9997 44.6035 C 830.9997 49.308 830.9997 49.308 1107.9997 36.5442 C 1384.9997 23.7802 1384.9997 23.7802 1661.9997 27.9453 C 1938.9997 32.1105 1938.9997 32.1105 2215.9997 36.5442 L 2215.9997 3288.2497 L 0 3288.2497 Z"/></svg>
    </div>

   <div class="wrap-page">
        <div class="container">

            {% if cart.item_count > 0 %}
                <form action="/cart" method="post" novalidate>
                    <div class="cart-labels cart-labels--desktop">
                        <h4>
                            Productos
                        </h4>
                                        
                        <div class="row">
                            <div class="col-md-6">
                                <h5>
                                    Producto
                                </h5>
                            </div>
                            <div class="col-md-2">
                                <h5>
                                    Precio
                                </h5>
                            </div>
                            <div class="col-md-2">
                                <h5>
                                    Cantidad
                                </h5>
                            </div>
                            <div class="col-md-2 total-price">
                                <h5>
                                    Total
                                </h5>
                            </div>
                        </div>
                    </div>

                    <div class="cart-products">
                        {% for item in cart.items %}
                            <div class="single-cart-product">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="cart-product">
                                            <img src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}">
                                            <div class="cart-product__info">
                                                <a href="{{ item.url }}" class="cart-product__name">
                                                    {{ item.title }}
                                                </a>

                                                {% comment %} {% assign meta_fields = item.properties %}
                                                {% unless meta_fields == empty %}
                                                    <ul>
                                                        {% for property in meta_fields %}
                                                            <li>{{ property.first }}: {{ property.last }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                {% endunless %} {% endcomment %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-5 col-sm-4 col-lg-2">
                                        <div class="cart-labels">
                                            <h5>
                                                Precio
                                            </h5>
                                        </div>
                                        <span>
                                            {{ item.price | money }}
                                        </span>
                                    </div>
                                    <div class="col-7 col-sm-4 col-lg-2">
                                        <div class="cart-labels">
                                            <h5>
                                                Cantidad
                                            </h5>
                                        </div>
                                        <div class="cart-quantity">
                                            <div class="cantidad">
                                                <span class="remove icon-minus js-remove-cart"></span>
                                                <span class="js-quantity-cart">
                                                    {{ item.quantity }}
                                                </span>
                                                <span class="add icon-plus js-add-cart"></span>
                                            </div>
                                            <input type="hidden" class="js-items" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0">
                                        </div>
                                    </div>
                                    <div class="col-3 col-sm-4 col-lg-2 total-price">
                                        <div class="cart-labels">
                                            <h5>
                                                Total
                                            </h5>
                                        </div>
                                        <span>
                                            {% if item.original_line_price != item.line_price %}{{ item.original_line_price | money }}{% endif %}
                                            {{ item.line_price | money }}
                                            {% for discount in item.discounts %}{{ discount.title }}{% endfor %}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="cart-footer">
                        <div class="row">
                            <div class="col-md-6 col-lg-8">
                            </div>
                            <div class="col-6 col-md-3 col-lg-2">
                                <h5>
                                    Subtotal:
                                </h5>
                            </div>
                            <div class="col-6 col-md-3 col-lg-2">
                                <span>
                                    {{ cart.total_price | money_with_currency }}
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="cart-actions">
                        <div class="row">
                            <div class="col-md-6 col-lg-8"></div>
                            <div class="col-6 col-md-3 col-lg-2">
                                <button class="btn btn--white" type="submit" name="update">Actualizar</button>
                            </div>
                            <div class="col-6 col-md-3 col-lg-2">
                                <button class="btn" type="submit" name="checkout">Pagar</button>
                            </div>
                        </div>
                    </div>
                </form>

            {% else %}
                El carrito está vacío
            {% endif %}
        </div>
   </div>
</div>
