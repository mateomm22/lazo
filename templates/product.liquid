                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="product-intro">
                        <h2>
                            {{ product.title }}
                        </h2>
                        <p>
                            {{ product.description }}
                        </p>

                        <div class="product-form">
                            <div class="cantidad">
                                <span class="js-quantity">
                                    1
                                </span>
                                <div class="controls">
                                    <span class="remove js-remove"></span>
                                    <span class="add js-add"></span>
                                </div>
                            </div>

                            <p class="price">
                                {{ product.price | money_with_currency }}
                            </p>

                            {% form "product", product %}
                              
                                <input hidden type="text" value="1" name="quantity" id="quantity" />
                                <input hidden type="text" name="id" value="{{ product.variants[0].id }}">

                                <button type="submit" class="btn add-to-cart js-add-to-cart">
                                    AÃ±adir al carrito
                                </button>
                            {% endform %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

