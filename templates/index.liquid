<div id="homepage" data-barba="container" data-barba-namespace="inicio">
    <div class="animated"></div>

    {% assign home_fields = shop.metafields.inicio %}

    <div class="main-hero hero--home">
        <div class="container">
            <div class="row v-center">
                <div class="col-md-6">
                    <div class="main-hero-content">
                        <h1 class="title title--big title--white">
                            {{ home_fields.hero }}
                        </h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="main-hero-img">
                        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/home-color.gif?v=1596403703" alt="Home Lazo Libros">
                    </div>
                </div>

                <div class="hero-link">
                    <i class="icon-arrow-down"></i>
                    <span>SCROLL</span>
                </div>
            </div>
        </div>
        
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--yellow"><path class="js-wave" d="M 0 49.6473 C 422.8883 41.1901 422.8883 41.1901 845.7766 45.4188 C 1268.6649 49.6473 1268.6649 49.6473 1691.5533 37.5506 C 2114.4416 25.4538 2114.4416 25.4538 2537.3299 41.7879 L 2537.3299 3972.8999 L 0 3972.8999 Z"></path></svg>
    </div>

    <div class="module-book">
        {% comment %} 
            Get Featured Product
        {% endcomment %}
        {% for prod in collections.all.products %}
            {% if prod.metafields.producto.destacado %}
                {% assign featured = all_products[prod.handle] %}
            {% endif %}
        {% endfor %}

        {% assign featured_fields = featured.metafields.producto %}

        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-5">
                    <div class="module-banner-left">
                        <h2 class="title title--big">
                            {{ featured.title }}
                        </h2>
                        <p>
                        {{ featured_fields.intro_short }}
                        </p>
                        <div class="banner-links">
                            <div class="banner-link-leer">
                                <a class="cta" href="/pages/el-vuelo-de-las-jorobadas">
                                    <span>LEER MÁS</span>
                                    {% include 'cta-line' %}
                                </a>
                            </div>
                                
                            <a class="banner-link-comprar" href="{{ featured.url }}">
                                <i class="icon-shopping-cart"></i>
                                ¡LO QUIERO!
                            </a>
                        </div>

                        <div class="banner-destino">
                            <div class="banner-destino-icon">
                                <i class="icon-paper-plane"></i>
                            </div>
                            <div class="banner-destino-text">
                                Destino: {{ featured_fields.destino }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-7">
                    <div class="module-banner-right">
                        <img src="{{ featured_fields.img_destacada }}" alt="{{ featured.title }}" >
                    </div>
                    <div class="module-banner-circle">
                        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/nuevo-libro.svg?v=1585457252" alt="">
                    </div>
                </div>
            
            </div>
            
            <div class="module-book_quote">
                <p class="title">
                    {{ featured_fields.quote }}
                </p>
            </div>
        </div>

        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--blue"><path class="js-wave2" d="M 0 27.9875 C 422.8883333333333 26.9984 422.8883333333333 26.9984 845.7766666666666 27.4929 C 1268.665 27.9875 1268.665 27.9875 1691.5533333333333 26.0751 C 2114.4416666666666 24.1625 2114.4416666666666 24.1625 2537.33 26.8808 L 2537.33 4858.58 L 0 4858.58 Z"></path></svg>
    </div>

    {% if home_fields.video_destacado %}
        <div id="homepage-video">
            <div class="container">
                <div class="homepage-video-container">
                    {% if home_fields.platform == "vimeo" %}
                        <iframe frameborder="0" src="https://player.vimeo.com/video/{{ home_fields.video_destacado }}"></iframe>
                    {% elsif home_fields.platform == "youtube" %}
                        <iframe src="https://www.youtube.com/embed/{{ home_fields.video_destacado }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}

    <div id="homepage-blog">
        <div class="container">
            <div class="homepage-blog-top">
                <h2 class="title title--big">
                    {{ blogs.lazo-blog.title }}
                </h2>
                <div class="homepage-blog-link">
                    <a href="{{ blogs.lazo-blog.url }}" class="cta">
                        <span>VER MÁS</span>
                        {% include 'cta-line' %}
                    </a>
                </div>
            </div>
            <div class="homepage-blog-content">
                <div class="row">
                    {% for article in blogs.lazo-blog.articles %}
                        <div class="col-md-4">
                            <div class="blog-card">
                                <a href="{{ article.url }}">
                                    <div class="blog-card__image">
                                        <img src="{{ article.image.src | img_url: 'grande' }}" alt="">
                                    </div>
                                    {% for tag in article.tags %}
                                        <div class="blog-card__tag">
                                            {{ tag }}
                                        </div>
                                    {% endfor %}
                                    <div class="blog-card__text">
                                        <h3 class="title title--small">
                                            {{ article.title }}
                                        </h3>
                                        <p>
                                            {{ article.excerpt }}
                                        </p>
                                        <div class="blog-card__link">
                                            <div class="cta">
                                                <span>LEER MÁS</span>
                                                {% include 'cta-line-2' %}
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--yellow"><path class="js-wave2" d="M 0 27.9875 C 422.8883333333333 26.9984 422.8883333333333 26.9984 845.7766666666666 27.4929 C 1268.665 27.9875 1268.665 27.9875 1691.5533333333333 26.0751 C 2114.4416666666666 24.1625 2114.4416666666666 24.1625 2537.33 26.8808 L 2537.33 4858.58 L 0 4858.58 Z"></path></svg>
    </div>

