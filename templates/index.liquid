<div id="homepage" data-barba="container" data-barba-namespace="inicio">
    <div class="animated"></div>

    {% assign home_fields = shop.metafields.inicio %}

    <div class="main-hero hero--home">
        <div class="container">
            <div class="row v-center">
                <div class="col-md-6">
                    <div class="main-hero-content">
                        <h1 class="title title--big title--white">
                            {{ home_fields.hero }}
                        </h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="main-hero-img">
                        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/home-color.gif?v=1596403703" alt="Home Lazo Libros">
                    </div>
                </div>

                <div class="hero-link">
                    <i class="icon-arrow-down"></i>
                    <span>SCROLL</span>
                </div>
            </div>
        </div>
        
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--yellow"><path class="js-wave" d="M 0 49.308 C 276.9997 39.8989 276.9997 39.8989 553.9997 44.6035 C 830.9997 49.308 830.9997 49.308 1107.9997 36.5442 C 1384.9997 23.7802 1384.9997 23.7802 1661.9997 27.9453 C 1938.9997 32.1105 1938.9997 32.1105 2215.9997 36.5442 L 2215.9997 3288.2497 L 0 3288.2497 Z"/></svg>
    </div>

    <div class="module-book">
        {% comment %} 
            Get Featured Product
        {% endcomment %}
        {% for prod in collections.all.products %}
            {% if prod.metafields.producto.destacado %}
                {% assign featured = all_products[prod.handle] %}
            {% endif %}
        {% endfor %}

        {% assign featured_fields = featured.metafields.producto %}

        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-5">
                    <div class="module-banner-left">
                        <h2 class="title title--big">
                            {{ featured.title }}
                        </h2>
                        <p>
                        {{ featured_fields.intro_short }}
                        </p>
                        <div class="banner-links">
                            <div class="banner-link-leer">
                                <a class="cta" href="/pages/el-vuelo-de-las-jorobadas">
                                    <span>LEER MÁS</span>
                                    {% include 'cta-line' %}
                                </a>
                            </div>
                                
                            <a class="banner-link-comprar" href="{{ featured.url }}">
                                <i class="icon-shopping-cart"></i>
                                ¡LO QUIERO!
                            </a>
                        </div>

                        <div class="banner-destino">
                            <div class="banner-destino-icon">
                                <i class="icon-paper-plane"></i>
                            </div>
                            <div class="banner-destino-text">
                                Destino: {{ featured_fields.destino }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-7">
                    <div class="module-banner-right">
                        <img src="{{ featured_fields.img_destacada }}" alt="{{ featured.title }}" >
                    </div>
                    <div class="module-banner-circle">
                        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/nuevo-libro.svg?v=1585457252" alt="">
                    </div>
                </div>
            
            </div>
            
            <div class="module-book_quote">
                <p class="title">
                    {{ featured_fields.quote }}
                </p>
            </div>
        </div>

        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--blue"><path class="js-wave2" d="M 0 44.7343 C 166.1999 39.2494 166.1999 39.2494 332.3999 41.9919 C 498.5999 44.7343 498.5999 44.7343 664.7999 36.7402 C 830.9999 28.746 830.9999 28.746 997.1999 30.3675 C 1163.3999 31.989 1163.3999 31.989 1329.5999 24.5586 C 1495.7999 17.1282 1495.7999 17.1282 1661.9999 33.5904 L 1661.9999 3627.7699 L 0 3627.7699 Z"/></svg>
    </div>

    <div id="homepage-video">
        <div class="container">
            <div class="homepage-video-container">
                <iframe width="640" height="320" frameborder="0" src="https://player.vimeo.com/video/225434434?"></iframe>
            </div>
        </div>
    </div>

    <div id="homepage-blog">
        <div class="container">
            <div class="homepage-blog-top">
                <h2 class="title title--big">
                    {{ blogs.lazo-blog.title }}
                </h2>
                <div class="homepage-blog-link">
                    <a href="{{ blogs.lazo-blog.url }}" class="cta">
                        <span>VER MÁS</span>
                        {% include 'cta-line' %}
                    </a>
                </div>
            </div>
            <div class="homepage-blog-content">
                <div class="row">
                    {% for article in blogs.lazo-blog.articles %}
                        <div class="col-md-4">
                            <div class="blog-card">
                                <a href="{{ article.url }}">
                                    <div class="blog-card__image">
                                        <img src="{{ article.image.src | img_url: 'grande' }}" alt="">
                                    </div>
                                    {% for tag in article.tags %}
                                        <div class="blog-card__tag">
                                            {{ tag }}
                                        </div>
                                    {% endfor %}
                                    <div class="blog-card__text">
                                        <h3 class="title title--small">
                                            {{ article.title }}
                                        </h3>
                                        <p>
                                            {{ article.excerpt }}
                                        </p>
                                        <div class="blog-card__link">
                                            <div class="cta">
                                                <span>LEER MÁS</span>
                                                {% include 'cta-line-2' %}
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--yellow"><path class="js-wave2" d="M 0 44.7343 C 166.1999 39.2494 166.1999 39.2494 332.3999 41.9919 C 498.5999 44.7343 498.5999 44.7343 664.7999 36.7402 C 830.9999 28.746 830.9999 28.746 997.1999 30.3675 C 1163.3999 31.989 1163.3999 31.989 1329.5999 24.5586 C 1495.7999 17.1282 1495.7999 17.1282 1661.9999 33.5904 L 1661.9999 3627.7699 L 0 3627.7699 Z"/></svg>
    </div>

