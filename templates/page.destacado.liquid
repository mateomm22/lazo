    <div id="destacado-slider">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <div class="destacado-slider__slider js-destacado-slider">
                        {% for slide in destacado.slider %}
                            <div class="slide">
                                <img src="{{ slide }}" alt="" class="img-responsive">
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="destacado-slider__tabs">
                        {% for slide in destacado.slider %}
                            {% if forloop.first == true %}
                                <div class="single-slider-tab js-slider-tab active" data-slide-to="{{ forloop.index0 }}">
                                    <img src="{{ slide }}" alt="" class="img-responsive">
                                </div>
                            {% else %}
                                <div class="single-slider-tab js-slider-tab" data-slide-to="{{ forloop.index0 }}">
                                    <img src="{{ slide }}" alt="" class="img-responsive">
                                </div>
                            {% endif %}
