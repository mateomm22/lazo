<div id="nosotros" data-barba="container" data-barba-namespace="nosotros">
    <div class="animated"></div>

    {% assign nosotros = page.metafields.nosotros %}
    
    <div class="main-hero hero--nosotros">
        <div class="container">
            <div class="row v-center">
                <div class="col-md-6">
                    <div class="main-hero-content">
                        <h1 class="title title--white title--big">
                            {{ nosotros.nosotros_hero }}   
                        </h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="main-hero-img">
                        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/nosotros-color.gif?v=1596497363" alt="">
                    </div>
                </div>
                <div class="hero-link">
                    <i class="icon-arrow-down"></i>
                    <span>SCROLL</span>
                </div>
            </div>
        </div>
    </div>

    <div id="nosotros-sections">
        <div class="js-nosotros-trigger"></div>
        <div class="container">
            <div class="wrap-nosotros js-wrap-nosotros">
                <div class="nosotros-single">
                    <div class="row between">
                        <div class="col-lg-5">
                            <div class="js-nosotros-left">
                                <div class="nosotros-single__intro nosotros-single__intro--first js-nosotros-1">
                                    <div class="nosotros-single__title js-title-1">
                                        <h2 class="title title--white">
                                            {{ nosotros.title_1 }}   
                                        </h2>
                                    </div>
                                    <div class="nosotros-single__image js-image-1">
                                        <img src="{{ nosotros.img_1 }}" alt="{{ nosotros.title_1 }}">
                                    </div>
                                </div>
                                <div class="nosotros-single__intro js-nosotros-2">
                                    <div class="nosotros-single__title js-title-2">
                                        <h2 class="title title--white">
                                            {{ nosotros.title_2 }}  
                                        </h2>
                                    </div>
                                    <div class="nosotros-single__image js-image-2">
                                        <img src="{{ nosotros.img_2 }}" alt="{{ nosotros.title_2 }}">
                                    </div>
                                </div>
                                <div class="nosotros-single__intro js-nosotros-3">
                                    <div class="nosotros-single__title js-title-3">
                                        <h2 class="title title--white">
                                            {{ nosotros.title_3 }}  
                                        </h2>
                                    </div>
                                    <div class="nosotros-single__image js-image-3">
                                        <img src="{{ nosotros.img_3 }}" alt="{{ nosotros.title_3 }}">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="nosotros-single__text js-text-1">
                                <h2 class="title title--white">
                                    {{ nosotros.title_1 }}  
                                </h2>
                                <div>
                                    {{ nosotros.text_1 }}  
                                </div>
                            </div>
                            <div class="nosotros-single__text js-text-2">
                                <h2 class="title title--white">
                                    {{ nosotros.title_2 }}  
                                </h2>
                                <div>
                                    {{ nosotros.text_2 }} 
                                </div>
                            </div>
                            <div class="nosotros-single__text js-text-3">
                                <h2 class="title title--white">
                                    {{ nosotros.title_3 }}  
                                </h2>
                                <div>
                                    {{ nosotros.text_3 }} 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

