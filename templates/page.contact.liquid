<div id="contacto" data-barba="container" data-barba-namespace="contacto">
    <div class="animated"></div>
    
    {% assign contacto = page.metafields.contacto %}

    <div class="main-hero hero--contacto">
        <div class="container">
            <div class="row v-center">
                <div class="col-md-7">
                    <div class="main-hero-content">
                        <h1 class="title title--big title--white">
                            {{ contacto.hero_contacto }} 
                        </h1>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="main-hero-img">
                        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/contacto-color.gif?v=1596752490" alt="">
                    </div>
                </div>
            </div>
            <div class="hero-link">
                <i class="icon-arrow-down"></i>
                <span>SCROLL</span>
            </div>
        </div>
    </div>

    <div id="wrap-contacto-form">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="title title--white">
                        Hablemos
                    </h2>
                    <div class="form-social">
                        <h3>S√çGUENOS</h3>
                        <div class="form-social-icons">
                            <a href="https://www.instagram.com/lazo_libros/" target="_blank">
                                <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/instagram-white.svg?v=1586535617" alt="">
                            </a>
                            <a href="">
                                <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/youtube-white.svg?v=1586535608" alt="">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="contacto-form">
                        {% form 'contact' %}
                            <input id="contact_tags" name="contact[tags]" type="hidden" value="contacto" />
                            <input type="text" id="ContactFormName" name="contact[name]" placeholder="Tu nombre completo">
                            <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="Tu correo">
                            <textarea rows="10" id="ContactFormMessage" name="contact[body]" placeholder="Escribe tu mensaje"></textarea>
                            {{ form.errors | default_errors }}
                            <button type="submit">
                                ENVIAR MENSAJE
                                <i class="icon-arrow-up-right"></i>
                            </button>
                            {% if form.posted_successfully? %} 
                                <p class="thankyou">
                                    Gracias por ponerte en contacto con nosotros 
                                </p>
                            {% endif %}
                        {% endform %}
                    </div>
                </div>
            </div>
        </div>
        
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--white js-wave"><path d="M0 10 L2500 10 L2500 80 L0 80 Z" /></svg>
    </div>

    <div id="contacto-info">
        <div class="container">
            <div class="row between">
                <div class="col-md-5">
                    <div class="contacto-info-left"">
