<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  <link rel="stylesheet" href="https://use.typekit.net/szl1ndf.css">
  {{ content_for_header }} <!-- Header hook for plugins -->

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css">

  {{ 'main.min.css' | asset_url | stylesheet_tag }}
    
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@barba/core"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.4.2/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.4.2/ScrollTrigger.min.js"></script>
  <script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/85188/jquery.wavify.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>

    <style>
        body {
            overflow: hidden;
        }
        .cover {
            width: 100%;
            height: 100vh;
            position: fixed;
            background-color: black;
            z-index: 9000;
        }
        .cover img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .cover-mobile {
            display: none;
        }
        @media screen and (max-width: 600px) {
            .cover-mobile {
                display: block;
            }
            .cover-desktop {
                display: none;
            }
        }
    </style>

</head>
<body data-barba="wrapper">
    <div class="cover">
        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/Artboard_1_2x_43b89da6-bf6c-4fde-af6c-388097e11a05.png?v=1603159234" class="cover-desktop">
        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/Artboard_2_2x_8bca3028-4f2e-4289-b594-37da38c5a273.png?v=1603159251" class="cover-mobile">
    </div>
    
    <nav class="main-nav">
        <div class="container">
            <div class="row">
                <div class="main-nav__logo">
                    <a href="/">
                        <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/lazo-logo.svg?v=1585452340" alt="">
                    </a>
                </div>
                <div class="main-nav__menu js-main-menu">
                    <ul>
                        {% for link in linklists.main-menu.links %}
                            <li class="js-nav-item">
                                <a href="{{ link.url }}" class="{% if link.active %}current{% endif %}" data-page="{{ link.title | handleize }}">
                                    {{ link.title | escape }}
                                    <span></span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="main-nav__cart">
                    <a href="/cart">
                        <i class="icon-shopping-cart"></i>
                        {% comment %} <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/shopping-cart.svg?v=1585453527" alt=""> {% endcomment %}
                    </a>
                    <span>
                      {% if cart.item_count > 0 %}
                          {{ cart.item_count }}
                      {% endif %}
                    </span>
                </div>
                <div class="main-nav__icon">
                    <button class="hamburger js-open-menu">
                        <div class="hamburger-inner"></div>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <main role="main">
        {{ content_for_layout }}
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--black"><path class="js-wave2" d="M 0 27.9875 C 422.8883333333333 26.9984 422.8883333333333 26.9984 845.7766666666666 27.4929 C 1268.665 27.9875 1268.665 27.9875 1691.5533333333333 26.0751 C 2114.4416666666666 24.1625 2114.4416666666666 24.1625 2537.33 26.8808 L 2537.33 4858.58 L 0 4858.58 Z"></path></svg>
    </main>

    <div class="boletin">
        <div class="container">
            <div class="row v-center">
                <div class="col-lg-6">
                    <div class="boletin-left">
                        <span class="boletin-eyebrow">
                            INSCRÍBETE AL BOLETÍN
                        </span>
                        <h3 class="boletin-title">
                            Formemos juntos<br>un lazo de experiencia.
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="boletin-right">
                        {% form 'customer' %}
                            <input id="contact_tags" name="contact[tags]" type="hidden" value="newsletter" />

                            <input id="contact_email" name="contact[email]" type="text" placeholder="Tu correo" />
                            <button class="submit" type="submit">
                                Inscribirme
                            </button>
                            {% if form.posted_successfully? %} 
                                <p class="thankyou">
                                    Gracias por suscribirte
                                </p>
                            {% endif %}
                        {% endform %}
                    </div>
                </div>
            </div>
        </div>
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" class="wave wave--white"><path class="js-wave" d="M 0 49.6473 C 422.8883 41.1901 422.8883 41.1901 845.7766 45.4188 C 1268.6649 49.6473 1268.6649 49.6473 1691.5533 37.5506 C 2114.4416 25.4538 2114.4416 25.4538 2537.3299 41.7879 L 2537.3299 3972.8999 L 0 3972.8999 Z"></path></svg>
    </div>

    <div class="footer">
        <div class="container">
        <div class="footer-top">
            <div class="footer-img">
                <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/logo-footer.gif?v=1596404964" alt="">
            </div>
            <div class="footer-social">
            <a href="https://www.instagram.com/lazo_libros/" target="_blank">
                <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/instagram.svg?v=1585887136" alt="">
            </a>
            <a href="">
                <img src="https://cdn.shopify.com/s/files/1/0367/2417/9081/files/youtube.svg?v=1585887135" alt="">
            </a>
            </div>
        </div>
        <div class="footer-links">
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <div class="footer-col">
                        <h4>LAZO LIBROS</h4>
                        <ul>
                            {% for link in linklists.footer.links %}
                                <li>
                                    <a href="{{ link.url }}">
                                        {{ link.title | escape }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="footer-col">
                        <h4>CONTACTO</h4>
                        <ul>
                            <li>
                                <a href="">pguerra@lazolibros.com</a>
                            </li>
                            <li>+(57) 316 527 3114</li>
                            <li>Bogotá - CO</li>
                            <li>Hablemos</li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="footer-col">
                        <h4>SOPORTE</h4>
                        <ul>
                            {% for link in linklists.menu-soporte.links %}
                                <li>
                                    <a href="{{ link.url }}">
                                        {{ link.title | escape }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                </div>
            </div>
            <div class="footer-bottom">
                <span class="bottom-left">© Lazo libros 2020</span>
                <span class="bottom-right">Website por <a href="http://studiocontra.co/" target="_blank">@contra</a></span>
            </div>
        </div>
    </div>


{{ 'application.min.js' | asset_url | script_tag }}

</body>
</html>
